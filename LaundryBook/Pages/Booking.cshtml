@page
@model LaundryBook.Pages.BookingModel
@{
    ViewData["Title"] = "Booking";
}

<section class="container py-5">
    <div class="text-center mb-4">
        <h1 class="display-6" style="font-family:'Playfair Display',serif;">🧺 Opret ny booking</h1>
        <p class="text-muted">Vælg dato, tidsrum, maskine og beboer</p>
    </div>

    <!-- Form card -->
    <div class="card shadow-sm mb-5">
        <div class="card-body">
            <form method="post" asp-page-handler="Create" class="row g-3">
                <div class="col-md-3">
                    <label asp-for="Date" class="form-label fw-semibold">Dato</label>
                    <input asp-for="Date" type="date" class="form-control" />
                </div>

                <div class="col-md-3">
                    <label asp-for="Slot" class="form-label fw-semibold">Tidsrum</label>
                    <select asp-for="Slot" class="form-select">
                        <option value="1">08:00 – 10:00</option>
                        <option value="2">10:00 – 12:00</option>
                        <option value="3">12:00 – 14:00</option>
                        <option value="4">14:00 – 16:00</option>
                        <option value="5">16:00 – 18:00</option>
                        <option value="6">18:00 – 20:00</option>
                    </select>
                </div>

                <div class="col-md-3">
                    <label asp-for="MachineId" class="form-label fw-semibold">Maskine</label>
                    <select asp-for="MachineId" class="form-select">
                        @foreach (System.Collections.Generic.KeyValuePair<int, LaundryLibrary.Model.Machine> m in Model.Machines)
                        {
                            <option value="@m.Value.Id">#@m.Value.Id (@m.Value.Type)</option>
                        }
                    </select>
                </div>

                <div class="col-md-3">
                    <label asp-for="ResidentId" class="form-label fw-semibold">Beboer</label>
                    <select asp-for="ResidentId" class="form-select">
                        @foreach (LaundryLibrary.Model.Resident r in Model.Residents)
                        {
                            <option value="@r.Id">@r.FirstName @r.LastName</option>
                        }
                    </select>
                </div>

                <div class="col-12 text-end mt-3">
                    <button type="submit" class="btn btn-gold px-4">Gem booking</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Table of bookings -->
    <h2 class="mb-3" style="font-family:'Playfair Display',serif;">Aktuelle bookinger</h2>
    <div class="table-responsive">
        <table class="table table-striped align-middle shadow-sm">
            <thead class="table-light">
                <tr>
                    <th>Nøgle</th>
                    <th>Dato</th>
                    <th>Tidsrum</th>
                    <th>Maskine</th>
                    <th>Beboer</th>
                    <th>Handling</th>
                </tr>
            </thead>
            <tbody>
                @foreach (System.Collections.Generic.KeyValuePair<int, LaundryLibrary.Model.Booking> kv in Model.Bookings)
                {
                    <tr>
                        <td>@kv.Key</td>
                        <td>@kv.Value.Date.ToString("yyyy-MM-dd")</td>
                        <td>@kv.Value.Slot</td>
                        <td>@kv.Value.MachineId</td>
                        <td>@kv.Value.ResidentId</td>
                        <td class="text-nowrap">
                            <form method="post" asp-page-handler="Delete" class="d-inline">
                                <input type="hidden" name="key" value="@kv.Key" />
                                <button type="submit" class="btn btn-sm btn-danger">Slet</button>
                            </form>
                            <form method="post" asp-page-handler="Change" class="d-inline">
                                <input type="hidden" name="key" value="@kv.Key" />
                                <input type="date" name="newDate" class="form-control form-control-sm d-inline-block" style="width:140px;" />
                                <select name="newSlot" class="form-select form-select-sm d-inline-block" style="width:120px;">
                                    <option value="1">08–10</option>
                                    <option value="2">10–12</option>
                                    <option value="3">12–14</option>
                                    <option value="4">14–16</option>
                                    <option value="5">16–18</option>
                                    <option value="6">18–20</option>
                                </select>
                                <button type="submit" class="btn btn-sm btn-primary">Skift</button>
                            </form>
                            <form method="post" asp-page-handler="ChooseMachine" class="d-inline">
                                <input type="hidden" name="key" value="@kv.Key" />
                                <select name="machineId" class="form-select form-select-sm d-inline-block" style="width:100px;">
                                    @foreach (System.Collections.Generic.KeyValuePair<int, LaundryLibrary.Model.Machine> m in Model.Machines)
                                    {
                                        <option value="@m.Value.Id">@m.Value.Id</option>
                                    }
                                </select>
                                <button type="submit" class="btn btn-sm btn-secondary">Sæt</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</section>
